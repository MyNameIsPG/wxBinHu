<view class="page">
    <view class="page__bd">
        <form bindsubmit="submitForm">
            <view class="weui-cells weui-cells_after-title" style="margin-top: 10px;">
                <view class="weui-cell weui-cell_select">
                    <view class="weui-cell__bd" style="padding:10px;">
                        <image style="width: 60px; height: 60px; border-radius:50%;" src="{{form.head_url}}"></image>
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">昵称</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="nick_name" value="{{ form.nick_name }}" class="weui-input" type="text" placeholder="请输入昵称" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">真实姓名</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="real_name" value="{{ form.real_name }}" class="weui-input" type="text" placeholder="请输入真实姓名" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">手机号码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="phone" value="{{ form.phone }}" class="weui-input" type="text" placeholder="请输入手机号码" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">身份证号码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="card_number" value="{{ form.card_number }}" class="weui-input" type="text" placeholder="请输入身份证号码" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_select">
                    <view class="weui-cell__hd weui-cell__hd_in-select-after">
                        <view class="weui-label">出生日期</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker name="birthday" mode="date" bindchange="bindDateChange" start="1980-01-01" end="2055-12-30" value="{{ form.birthday }}">
                            <view class="weui-select weui-select_in-select-after">{{ form.birthday }}</view>
                        </picker>
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">居住地址</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="domicile" value="{{ form.domicile }}" class="weui-input" type="text" placeholder="请输入居住地址" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">职业</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="industry" value="{{ form.industry }}" class="weui-input" type="text" placeholder="请输入职业" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">所属行业</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="vocation" value="{{ form.vocation }}" class="weui-input" type="text" placeholder="请输入所属行业" />
                    </view>
                </view>
            </view>
            <view class="button-sp-area">
                <button class="weui-btn" style="background-color: #26a0f5; color: #fff;" type="" formType="submit">保存</button>
            </view>
        </form>
    </view>
</view>