.userContainer .userList {
    background: #fff;
    box-shadow: 0px 1px 3px 1px rgba(38, 160, 245, 0.4);
    border-radius: 10px;
    margin: 30rpx;
}

.userContainer .userList ul {
    display: block;
    padding: 0 15px;
}

.userContainer .userList ul li {
    display: block;
    height: 45px;
    line-height: 45px;
    border-bottom: 1px solid #ccc;
    color: #333;
    font-size: 15px;
    font-weight: bold;
    position: relative;
}

.userContainer .userList ul li:last-child {
    border-bottom: none;
}

.userContainer .userList ul li::after {
    content: "";
    position: absolute;
    right: 0px;
    top: 15.5px;
    width: 7px;
    height: 14px;
    display: block;
    z-index: 99;
    background-image: url("https://file.yunji01.com/committee/000015/20180707/20180707174224132260.png");
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.userContainer .userList ul li text {
    position: absolute;
    right: 20px;
    top: 13.5px;
    background: #e3393c;
    width: 18px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    border-radius: 50%;
    color: #fff;
    font-size: 12px;
}

.userContainer .userList image {
    width: 45rpx;
    height: 45rpx;
    vertical-align: middle;
    margin-top: -5px;
    margin-right: 5px;
}