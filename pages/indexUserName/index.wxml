<view>
    <form catchsubmit="formSubmit" catchreset="formReset">
        <view class="page-section" style="margin-top: 10px;">
            <view class="page-section-title" style="padding: 0 10px 3px;">真实姓名：</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="name" placeholder="请输入真实名称" />
                    </view>
                </view>
            </view>
        </view>

        <view class="page-section" style="margin: 20px 0;">
            <view class="page-section-title" style="padding: 0 10px 3px;">身份证号码：</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__bd">
                        <input class="weui-input" type="idcard" name="card_number" placeholder="请输入身份证号码" />
                    </view>
                </view>
            </view>
        </view>
        <view class="btn-area" style="padding: 0 15px;">
            <button style="background-color: #26a0f5; color: #fff;" formType="submit">立即认证</button>
        </view>
    </form>
</view>