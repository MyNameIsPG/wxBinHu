.userContainer {
    width: 100%;
    height: 100%;
}

.userContainer .bannerContainer {
    width: 100%;
    height: 400rpx;
    background: #e43a3d;
    position: relative;
    margin-bottom: 80rpx;
}

.userContainer .bannerContainer image {
    width: 100%;
    height: 100%;
}

.userContainer .bannerContainer .settingBtn {
    position: absolute;
    right: 20px;
    top: 20px;
}

.userContainer .bannerContainer .settingBtn image {
    width: 50rpx;
    height: 50rpx;
    margin-left: 20px;
}

.userContainer .bannerContainer .userPhotoBox {
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    bottom: -30px;
    height: 120rpx;
    background: #fff;
    text-align: center;
    box-sizing: border-box;
    z-index: 999;
    box-shadow: 0px 1px 3px 1px rgba(38, 160, 245, 0.4);
    border-radius: 10px;
}

.userContainer .bannerContainer .userPhotoBox > view {
    width: 90px;
    height: 90px;
    margin: 2px;
    border-radius: 50%;
    background: #fff;
    position: absolute;
    left: 50%;
    bottom: 40px;
    margin-left: -45px;
}

.userContainer .bannerContainer .userPhotoBox image {
    width: 86px;
    height: 86px;
    border-radius: 50%;
    margin: 2px;
    overflow: hidden;
}

.userContainer .bannerContainer .userPhotoBox text {
    color: #333;
    font-size: 32rpx;
}

.userContainer .userList {
    background: #fff;
    box-shadow: 0px 1px 3px 1px rgba(38, 160, 245, 0.4);
    border-radius: 10px;
    margin: 30rpx;
}

.userContainer .userList ul {
    display: block;
    padding: 0 15px;
}

.userContainer .userList ul li {
    display: block;
    height: 45px;
    line-height: 45px;
    border-bottom: 1px solid #ccc;
    color: #333;
    font-size: 15px;
    font-weight: bold;
    position: relative;
}

.userContainer .userList ul li:last-child {
    border-bottom: none;
}

.userContainer .userList ul li::after {
    content: "";
    position: absolute;
    right: 0px;
    top: 15.5px;
    width: 7px;
    height: 14px;
    display: block;
    z-index: 99;
    background-image: url("https://file.yunji01.com/committee/000015/20180707/20180707174224132260.png");
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.userContainer .userList ul li text {
    position: absolute;
    right: 20px;
    top: 13.5px;
    background: #e3393c;
    width: 18px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    border-radius: 50%;
    color: #fff;
    font-size: 12px;
}

.userContainer .userList image {
    width: 45rpx;
    height: 45rpx;
    vertical-align: middle;
    margin-top: -5px;
    margin-right: 5px;
}

.telBox {
    position: fixed;
    bottom: 15px;
    left: 0px;
    width: 100%;
    text-align: center;
}

.telBox text {
    display: block;
    color: #666;
    font-size: 12px;
    line-height: 22px;
}
