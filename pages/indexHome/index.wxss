.indexHome {
    position: relative;
}

.swiper {
  height: 100%;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.bgBanner {
    background: #26a0f5;
    height: 215rpx;
    margin-bottom: 240rpx;
}

.bgBannerBox {
    position: absolute;
    top: 0px;
    left: 0px;
    z-index: 99;
    height: 430rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.bgBannerBox image {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
    overflow: hidden;
    box-shadow: 0px 2px 4px 2px rgba( 38, 160, 246 , 0.4 );
}

.list {
    overflow: hidden;
    border-radius: 10px;
    background-color: rgb( 255, 255, 255 );
    box-shadow: 0px 1px 3px 1px rgba( 38, 160, 245, 0.4 );
    margin: 0 30rpx;
}

.list > view {
    float: left;
    width: 33%;
    color: #333333;
    font-size: 24rpx;
    text-align: center;
    margin: 30rpx 0;
}

.list > view image {
    width: 115rpx;
    height: 115rpx;
    display: block;
    margin: 0 auto;
}

.telBox {
    width: 90rpx;
    height: 80rpx;
    position: fixed;
    right: 0px;
    bottom: 30%;
}

.telBox image {
    width: 100%;
    height: 100%;
}