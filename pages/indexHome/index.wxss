.indexHome {
    position: relative;
}

page {
    background: #fff;
}

.swiper {
  height: 100%;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.bgBanner {
    background: #26a0f5;
    height: 215rpx;
    margin-bottom: 240rpx;
}

.bgBannerBox {
    height: 430rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    margin-top: 20rpx;
}

.bgBannerBox image {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
    overflow: hidden;
    box-shadow: 0px 2px 4px 2px rgba( 38, 160, 246 , 0.4 );
}

.list {
    overflow: hidden;
    background-color: rgb( 255, 255, 255 );
    margin: 0 30rpx;
}

.list > view {
    float: left;
    width: 33%;
    color: #333333;
    font-size: 28rpx;
    text-align: center;
    margin: 30rpx 0;
}

.list > view image {
    width: 90rpx;
    height: 90rpx;
    display: block;
    margin: 0 auto 15rpx;
}

.telBox {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #333333;
    font-weight: bold;
    text-align: center;
    box-shadow: 0px 1px 3px 1px rgba( 38, 160, 245, 0.4 );
    border-radius: 40rpx;
    margin: 30rpx 30rpx;
    box-sizing: border-box;
}

.telBox image {
    width: 36rpx;
    height: 36rpx;
    display: inline-block;
    vertical-align: middle;
    margin-top: -6rpx;
}